<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#414141"
    android:id="@+id/frameMaiin">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:elevation="8dp"
        app:cardCornerRadius="10dp"
        app:cardDescription="Test Description"
        app:cardTitle="Test Title">


        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="vertical"
                android:paddingLeft="20dp"

                android:paddingRight="20dp"
                android:paddingTop="0dp"
                android:weightSum="1">

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/textv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:maxLines="1"
                    android:paddingBottom="20sp"
                    android:text="Pay the Piper"
                    android:textAlignment="center"
                    android:textSize="25sp"></me.grantland.widget.AutofitTextView>


                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tvrandomno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:textColor="#000"
                    android:paddingBottom="20sp"
                    android:text="Random amount appears here"
                    android:textAlignment="center"
                    android:textSize="20dp"></me.grantland.widget.AutofitTextView>
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:id="@+id/LL1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <com.github.rubensousa.raiflatbutton.RaiflatButton
                            android:id="@+id/button1rs"
                            style="@style/Base.Widget.AppCompat.Button.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\u20B9 1" />
                        <com.github.rubensousa.raiflatbutton.RaiflatButton
                            android:id="@+id/button2rs"
                            style="@style/Base.Widget.AppCompat.Button.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\u20B9 2" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_alignBottom="@id/LL1"
                        android:orientation="horizontal">

                        <com.github.rubensousa.raiflatbutton.RaiflatButton
                            android:id="@+id/button5rs"
                            style="@style/Base.Widget.AppCompat.Button.Colored"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="\u20B9 5" />

                        <com.github.rubensousa.raiflatbutton.RaiflatButton
                            android:id="@+id/button10rs"
                            style="@style/Base.Widget.AppCompat.Button.Colored"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="\u20B9 10" />


                    </LinearLayout>


                </LinearLayout>


                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tvcuramt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:maxLines="2"
                    android:textColor="#000"
                    android:padding="20sp"
                    android:text="Current amount appears here"
                    android:textAlignment="center"
                    android:textSize="15dp"></me.grantland.widget.AutofitTextView>


                <Button
                    android:id="@+id/buttonundo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_gravity="center"
                    android:text="Undo" />


                <Button
                    android:id="@+id/buttonreset"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:elevation="5dp"
                    android:paddingBottom="0dp"
                    android:text="Reset"
                    android:textColor="@android:color/white" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:paddingBottom="20sp"
                    android:text="App developed by YLP"
                    android:textAlignment="center"
                    android:textSize="10dp">

                </me.grantland.widget.AutofitTextView>


            </LinearLayout>

        </ScrollView>


    </android.support.v7.widget.CardView>


</FrameLayout>
